{
  "name": "express-routers",
  "version": "1.0.1",
  "description": "Express Routers ðŸš¦ - just another way to create router in express apps.",
  "keywords": [
    "express",
    "router",
    "express router",
    "express routing",
    "typescript"
  ],
  "author": "Chanlito Hem <chanlitohem@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/chanlito/express-routers"
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.0.0"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "prepare": "npm run clean && npx tsc",
    "test": "nyc mocha -r ts-node/register -r source-map-support/register \"test/**/*.ts\""
  },
  "dependencies": {
    "express-promise-router": "^3.0.2",
    "source-map-support": "^0.5.6"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.2",
    "@types/supertest": "^2.0.4",
    "chai": "^4.1.2",
    "express": "^4.16.3",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "supertest": "^3.1.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.2"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
